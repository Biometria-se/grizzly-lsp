{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "compile",
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}/client/vscode"
      },
      "presentation": {
        "panel": "dedicated",
        "reveal": "never"
      },
      "problemMatcher": [
        "$tsc"
      ]
    },
    {
      "label": "tsc watch",
      "type": "npm",
      "script": "tsc-watch",
      "isBackground": true,
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "${workspaceFolder}/client/vscode"
      },
      "presentation": {
        "panel": "dedicated",
        "reveal": "never"
      },
      "problemMatcher": [
        "$tsc-watch"
      ]
    },
    {
      "label": "language server",
      "type": "shell",
      "command": "grizzly-ls",
      "args": [
        "--socket",
        "--verbose"
      ],
      "isBackground": true,
      "problemMatcher": {
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*Starting TCP server on.*",
          "endsPattern": "."
        },
        "pattern": {
          "regexp": ".",
          "file": 1,
          "location": 2,
          "message": 3
        }
      }
    },
      {
      "label": "debug client",
      "dependsOn": [
          "tsc watch",
          "language server"
      ]
    }
  ]
}
